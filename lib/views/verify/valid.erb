<h3 style="color: #000">Aktivt medlemsskap för</h3>
<h2><%= link_to @certificate.student.full_name, @certificate.certificate_url %></h2>
<p><%= link_to @certificate.delivery.course.title, "/courses/deliveries/show/#{@certificate.delivery.id}" %></p>
<p>Medlem sedan: <%= @certificate.delivery.start_date %></p>
<% if @certificate.stats != 0 %>
  <div>
    Visad <%= @certificate.stats %> <%= @certificate.stats == 1 ? 'gång' : 'gånger' %>
  </div>

<% end %>

<img src="<%= @certificate.image_url %>" />