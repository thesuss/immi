<% if @courses.any? %>
  <% @courses.each do |course| %>
    <div id="course-<%= course.id %>"> 
      <h3><%= course.title %></h3>  <%= link_to "delete", course, :method => :delete, :confirm => "You sure?", :title => "Delete #{course.title}" %>
      <p><%= course.description %></p>
      <% if course.deliveries %>
        <p>Medlemsdatum:
          <% course.deliveries.each do |date| %>
           <%= link_to date.start_date, "/courses/deliveries/show/#{date.id}" %> <%= link_to "delete", date, :method => :delete, :confirm => "You sure?", :title => "Delete #{date.start_date}" %><BR>
          <% end %>
        </p>
      <% end %>
      <%= link_to 'LÃ¤gg till medlemsdatum', "/courses/#{course.id}/add_date" if current_user %>
    </div>
  <% end %>
<% else %>
  <h1>Inga medlemstyper skapade</h1>
<% end %>
<% if current_user %>
  <%= link_to 'Skapa medlemstyp', '/courses/create' %>
<% end %>
