<% form_for :user, '/users/create', id: 'create' do |f|  %>
  <%= f.text_field_block :name, caption: 'Namn' %>
  <%= f.text_field_block :email, caption: 'E-post' %>
  <%= f.password_field_block :password, caption: 'Lösenord'  %>
  <%= f.password_field_block :password_confirmation, caption: 'Lösenord igen'  %>
  <%= f.submit 'Skapa konto' %>
<% end %>
